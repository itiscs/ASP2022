<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ItemPage"
             Title="Товар">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Название:" FontSize="Medium" Margin="20"/>
            <Label x:Name="lblName" Text="{Binding Name}" FontSize="Medium" Margin="20"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Описание:" FontSize="Medium" Margin="20,20,10,20"/>
            <Label Text="{Binding Description}" FontSize="Medium" Margin="10,20,10,20"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Цена:" FontSize="Medium" Margin="20,20,10,20"/>
            <Label Text="{Binding Price}" FontSize="Medium" Margin="10,20,10,20"/>
        </HorizontalStackLayout>


    </VerticalStackLayout>
</ContentPage>